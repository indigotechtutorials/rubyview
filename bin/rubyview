require 'rubyview'
require 'thor'

class RubyViewCLI < Thor
  desc "render TEMPLATE_PATH", "renders a ruby view template to html"
  def render(template_path)
    puts RubyView.render(template_path)
  end

  # TODO: Add -d to return as dump (pass in dump: true)
  desc "eval CODE", "evaluates rubyview code and converts to html"
  def eval(code)
    puts RubyView.evaluate(code)
  end
end

RubyViewCLI.start(ARGV)